<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:directories="clr-namespace:Camelot.ViewModels.Implementations.MainWindow.Directories;assembly=Camelot.ViewModels"
             xmlns:directoriesViews="clr-namespace:Camelot.Views.Main.Directories"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Camelot.Views.Main.Directories.FavouriteDirectoriesListView">

    <Design.DataContext>
        <directories:FavouriteDirectoriesListViewModel />
    </Design.DataContext>

    <Grid Classes="defaultBackgroundColorGrid">
        <ItemsControl Items="{Binding Directories}"
                      Margin="0,8,8,3">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <directoriesViews:FavouriteDirectoryView />
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
